{
  "name": "Zombie Hunter for Twitter",
  "description": "Twitterのインプレゾンビをワンクリックで非表示にし、自動でブロック・通報します。",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage"],
  "content_scripts": [
    {
      "js": ["content/main.js"],
      "matches": ["*://x.com/**"]
    }
  ],
  "action": {
    "default_title": "Zombie Hunter for Twitter",
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["/icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
